# Mediconnect Environment Configuration
# Copy this file to .env.local and update with your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Better Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars-replace-this-in-production
BETTER_AUTH_URL=https://your-domain.com

# Database Configuration
# For Production: Use PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/mediconnect

# For Development/Testing: Use SQLite
# DATABASE_URL=file:./sqlite.db

# Email Configuration (for verification & notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@mediconnect.com

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_SIGNUPS=true
ENABLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=true
