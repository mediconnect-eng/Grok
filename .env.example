# Health Hub Environment Configuration
# Copy this file to .env.local and update with your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://healthhubinternational.com
NEXT_PUBLIC_BETTER_AUTH_URL=https://healthhubinternational.com

# Better Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars-replace-this-in-production
BETTER_AUTH_URL=https://healthhubinternational.com

# Database Configuration
# For Production: Use PostgreSQL (Neon)
DATABASE_URL=postgresql://user:password@host-pooler.region.neon.tech/database?sslmode=require&channel_binding=require

# Email Configuration (for verification & notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@healthhubinternational.com

# OAuth Providers (Google Sign-In)
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth Providers (Optional - GitHub)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_SIGNUPS=true
ENABLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=true
